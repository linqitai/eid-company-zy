<div id="modal-modifyPassword" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content radius">
            <div class="modal-header">
                <h3 class="modal-title ml20">修改密码</h3>
                <a class="close" data-dismiss="modal" aria-hidden="true" href="javascript:void();">×</a>
            </div>
            <form class="form form-horizontal" id="modifyPasswordForm">
                <div class="modal-body">
                    <div class="row cl">
                        <label class="form-label col-xs-4 col-sm-3">当前密码：</label>
                        <div class="formControls col-xs-8 col-sm-8">
                            <input type="password" class="input-text" placeholder="请输入老密码" name="olderPassword" id="olderPassword">
                        </div>
                    </div>
                    <div class="row cl">
                        <label class="form-label col-xs-4 col-sm-3">新密码：</label>
                        <div class="formControls col-xs-8 col-sm-8">
                            <input type="password" class="input-text" placeholder="请输入新密码" name="newPassword" id="newPassword">
                        </div>
                    </div>
                    <div class="row cl">
                        <label class="form-label col-xs-4 col-sm-3">新密码确认：</label>
                        <div class="formControls col-xs-8 col-sm-8">
                            <input type="password" class="input-text" placeholder="再次输入新密码" id="confirm" name="confirm">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input class="btn btn-primary" type="submit" value="确定">
                    <a class="btn mr23" data-dismiss="modal" aria-hidden="true">关闭</a>
                </div>
            </form>
        </div>
    </div>
</div>