<table class="record mt40">
    <thead class="text-c">
        <tr>
            <td style="width:120px;">序号</td>
            <td class="title-bold" colspan="4">开庭公告</td>
        </tr>
    </thead>
    <tbody>
        {{#if this}} {{#each this}}
        <tr>
            <td rowspan="6" style="width:120px;">{{addOne @index}}</td>
            <td>开庭时间</td>
            <td>原告</td>
            <td>被告</td>
        </tr>
        <tr>
            <td class="report-content">{{isEmpty sortTimeString}}</td>
            <td class="report-content">{{isEmpty plaintiff}}</td>
            <td class="report-content">{{isEmpty defendant}}</td>
        </tr>
        <tr>
            <td>法院名称</td>
            <td>案号</td>
            <td>案由</td>
        </tr>
        <tr>
            <td class="report-content">{{isEmpty court}}</td>
            <td class="report-content">{{isEmpty caseNo}}</td>
            <td class="report-content">{{isEmpty caseCause}}</td>
        </tr>
        <tr>
            <td class="match-level">匹配度</td>
            <td colspan='2' class="report-content">{{matching matchRatio}}</td>
        </tr>
        <tr>
            <td>内容摘要</td>
            <td colspan='2' class="report-content">{{isEmpty body}}</td>
        </tr>
        {{/each}}
        {{else}}
        <tr>
            <td  style="width:120px;">1</td>
            <td class="text-c" colspan="8">查无数据</td>
        </tr>
        {{/if}}
    </tbody>
</table>